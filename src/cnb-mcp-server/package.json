{
  "name": "@cnbcool/mcp-server",
  "description": "CNB MCP Server. A comprehensive MCP server that provides seamless integration to the CNB's API(https://cnb.cool), offering a wide range of tools for repository management, pipelines operations and collaboration features",
  "version": "0.4.3",
  "main": "./dist/stdio.js",
  "bin": {
    "cnb-mcp-stdio": "dist/stdio.js",
    "cnb-mcp-streamable": "dist/streamable.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/stdio.js",
    "prepare": "husky",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "format:check": "prettier --check src",
    "format:fix": "prettier --write src"
  },
  "repository": {
    "type": "git",
    "url": "https://cnb.cool/cnb/tools/cnb-mcp-server"
  },
  "keywords": [
    "cnb",
    "cloud native build",
    "model context protocol",
    "mcp server"
  ],
  "license": "MIT",
  "files": [
    "dist/",
    "package.json",
    "CHANGELOG.md",
    "README.md",
    "README_zh.md"
  ],
  "engines": {
    "node": ">= 18",
    "typescript": ">=5.5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.10.2",
    "dotenv": "16.5.0",
    "express": "5.1.0",
    "zod": "3.24.3"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.24.0",
    "@modelcontextprotocol/inspector": "^0.16.2",
    "@types/express": "5.0.1",
    "@types/node": "22.13.9",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-prettier": "5.2.6",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.1",
    "prettier": "3.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "8.30.1"
  },
  "lint-staged": {
    "**/*": [
      "eslint --fix src",
      "prettier --write --ignore-unknown src"
    ]
  }
}
